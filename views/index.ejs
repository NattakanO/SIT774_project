<%- include('header'); -%>
<%- include('navbar.ejs', username) %>
<style>
body, html {
  height: 100%;
  margin: 0;
}

.parallax {
  background-image: url('images/bg1.png');
  height: 100%; 
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  opacity: 0.65;
}

.parallax2 {
  background-image: url('images/bg2.png');
  height: 100%; 
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  opacity: 0.65;
}
.caption {
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    text-align: center;
    color: #000;
}
.content {
  padding: 20px;
  text-align: center;
  background-color: #94618E;
  color: white;
}
.caption span.border {
    background-color: #94618E;
    color: #fff;
    padding: 18px;
    font-size: 40px;
    letter-spacing: 10px;
}
.toast {
    position: fixed;
    top: 0;
    align-items: center;
    width: 500px;
    z-index: 10000;
    padding: 0.5rem;
  }
</style>

<div class="parallax">
  <div class="caption">
    <span class="border">CHAPTERS</span>
  </div>
</div>
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="true" data-delay="3000">
  <div class="toast-header bg-success text-white">
    <strong class="me-auto">Success</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    Login successful!
  </div>
</div>
<div class="content">
  <h1>Welcome to CHAPTERS</h1>
  <p>Explore our vast collection of books covering various genres, from fiction to non-fiction, mystery to romance, and more!</p>
  <p>Whether you're a bookworm or just love to dive into a good story, our bookstore has something for everyone.</p>
  <p>Stay tuned for upcoming events, author signings, and special promotions!</p>
</div>

<div class="parallax2"></div>
<script>
  var toast = new bootstrap.Toast(document.querySelector('.toast'));
  <% if (loginSuccess) { %>
  
  toast.show();
<% } %>
</script>
<%- include('footer'); -%>
