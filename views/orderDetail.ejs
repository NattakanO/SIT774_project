<%- include('header'); -%>
<%- include('navbar.ejs', username) %>
  <style>
    .progress-step {
      text-align: center;
      width: 25%;
      font-weight: bold;
    }
    .progress-step.active {
      color: #94618E;
    }
    .order-item {
      display: flex;
      align-items: center;
      padding: 10px;
      border-bottom: 1px solid #dee2e6;
    }
    .order-item img {
      width: 100px;
      margin-right: 20px;
    }
    /* .order-item-details {
      flex-grow: 1;
    } */
    .order-item-details p {
      margin: 0;
    }
    .order-item-price {
      text-align: right;
    }
  </style>
  <div class="container my-5 col-md-10 mx-auto">
    <div class="progress-container mb-4">
      <div class="progress" style="height: 30px;">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="d-flex justify-content-between mt-2">
        <div class="progress-step active">1. Cart</div>
        <div class="progress-step active">2. Order Details</div>
        <div class="progress-step">3. Payment</div>
        <div class="progress-step">4. Confirmation</div>
      </div>
    </div>

      <div class="row justify-content-between">
        
      <!-- Payment Form -->
      <div class="col-md-6 rounded p-3 mx-3" style="background-color: #f4decb;">
        <h3 style="color: #94618E;">Payment Information</h3>
        <form action="/process-payment" method="post">
          <div class="mb-3">
            <label for="cardNumber" class="form-label">Card Number</label>
            <input type="text" class="form-control" id="cardNumber" name="cardNumber" required>
          </div>
          <div class="mb-3">
            <label for="cardHolderName" class="form-label">Card Holder Name</label>
            <input type="text" class="form-control" id="cardHolderName" name="cardHolderName" required>
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="expiryDate" class="form-label">Expiry Date</label>
              <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="MM/YY" required>
            </div>
            <div class="col-md-6 mb-3">
              <label for="cvv" class="form-label">CVV</label>
              <input type="text" class="form-control" id="cvv" name="cvv" required>
            </div>
          </div>
          <div class="d-grid my-2">
            <button type="submit" class="btn" style="background-color: #94618E; color: white;">Proceed to Payment</button>
          </div>
          
        </form>
      </div>
      <div class="col-md-5 rounded p-3" style="background-color: #f4decb;">
        <h2 style="color: #94618E;">Order#<%= order.order_id %> Details</h2>
        <% 
          let statusColor;
          switch (order.status) {
            case 'Pending':
              statusColor = 'bg-warning text-white';
              break;
            case 'Shipped':
              statusColor = 'bg-primary text-white';
              break;
            case 'Delivered':
              statusColor = 'bg-success text-white';
              break;
            case 'Cancelled':
              statusColor = 'bg-danger text-white';
              break;
            default:
              statusColor = 'bg-secondary text-white';
          }
        %>
        <p><strong>Order Date:</strong> <%= new Date(order.order_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
        <p><strong>Status:</strong> <span class="<%= statusColor %> rounded-pill p-2"><%= order.status %></span></p>
        
        <h4>Items:</h4>
        <div class="list-group">
          <% orderItems.forEach(function(item) { %>
            <div class="order-item list-group-item">
              <img src="../<%= item.cover_image_url %>" alt="<%= item.title %>">
              <div class="order-item-details">
                <p><strong>Title:</strong> <%= item.title %></p>
                <p><strong>Quantity:</strong> <%= item.quantity %></p>
              </div>
              <div class="order-item-price">
                <p><strong>Price:</strong> $<%= item.price.toFixed(2) %></p>
              </div>
            </div>
          <% }); %>
        </div>
        <p class="text-end"><strong>Total Amount:</strong> $<%= order.total_amount.toFixed(2) %></p>
      </div>
    </div>
  </div>

<%- include('footer'); -%>